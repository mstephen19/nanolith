{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "removeComments": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "pretty": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "@typing/*": ["types/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["./scripts"]
}
