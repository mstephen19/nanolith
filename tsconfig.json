{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "removeComments": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "pretty": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src"],
    "exclude": ["./scripts"]
}
